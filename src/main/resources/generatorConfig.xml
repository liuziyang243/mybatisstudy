<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <classPathEntry location="/home/lzy/m2repository/mysql/mysql-connector-java/6.0.6/mysql-connector-java-6.0.6.jar"/>
    <context id="context1">
        <!-- 是否生成注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mybatis_test?serverTimezone=UTC&amp;useSSL=false&amp;nullNamePatternMatchesAll=true"
                        userId="root" password="crscd123@"/>

        <!-- 生成的包名和工程名 -->
        <javaModelGenerator targetPackage="com.learn.autogen.po"
                            targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="com.learn.autogen.mapper"
                         targetProject="src/main/java"/>
        <javaClientGenerator targetPackage="com.learn.autogen.dao"
                             targetProject="src/main/java" type="XMLMAPPER"/>

        <!-- 数据库表 -->
        <table tableName="t_user" domainObjectName="User">
            <!-- 设置别名 -->
            <columnOverride column="user_name" property="userName"/>
            <!--
            <columnOverride column="ds_id" property="dsId" />
            <columnOverride column="ds_name" property="dsName" />
            <columnOverride column="dt_name" property="dtName" />
            <columnOverride column="login_name" property="loginName" />
            <columnOverride column="login_pwd" property="loginPwd" />
             -->
        </table>

    </context>
</generatorConfiguration>